{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "@modules": ["./src/modules"],
      "@modules/*": ["./src/modules/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@router": ["./src/router"],
      "@router/*": ["./src/router/*"],
      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"],
      "@recoil": ["./src/recoil"],
      "@recoil/*": ["./src/recoil/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
